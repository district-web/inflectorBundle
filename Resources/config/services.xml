<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dw_inflector.twig.extension.class">DistrictWeb\InflectorBundle\Twig\Extension\InflectorExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.inflector" class="%dw_inflector.twig.extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
